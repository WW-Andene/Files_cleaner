<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_input" />
            <solid android:color="@color/surfaceDim" />
            <stroke
                android:width="1dp"
                android:color="@color/borderSubtle" />
            <padding
                android:left="12dp"
                android:right="36dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <!-- Dropdown arrow (small chevron) -->
    <item
        android:width="10dp"
        android:height="10dp"
        android:gravity="center_vertical|end"
        android:right="12dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="35%">
            <shape android:shape="rectangle">
                <size
                    android:width="8dp"
                    android:height="8dp" />
                <solid android:color="@color/textTertiary" />
            </shape>
        </rotate>
    </item>
</layer-list>
