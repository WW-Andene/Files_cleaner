<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surfaceBase">

    <!-- Header card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="@dimen/radius_header"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorPrimaryContainer"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FileCleaner.Title"
                android:textColor="@color/colorOnPrimaryContainer"
                android:text="Title" />

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                android:textColor="@color/colorOnPrimaryContainer"
                android:alpha="0.8"
                android:layout_marginTop="4dp"
                android:text="@string/scan_to_see_results" />

            <!-- Select All / Deselect All -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_select_all"
                    style="@style/Widget.FileCleaner.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/select_all"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:strokeColor="@color/colorOnPrimaryContainer"
                    android:textColor="@color/colorOnPrimaryContainer"
                    app:cornerRadius="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_deselect_all"
                    style="@style/Widget.FileCleaner.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/deselect_all"
                    android:textSize="12sp"
                    app:strokeColor="@color/colorOnPrimaryContainer"
                    android:textColor="@color/colorOnPrimaryContainer"
                    app:cornerRadius="20dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Search bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:startIconDrawable="@drawable/ic_search"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:boxStrokeColor="@color/borderDefault"
        app:hintTextColor="@color/colorPrimary"
        app:startIconTint="@color/textTertiary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_files_hint"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:textAppearance="@style/TextAppearance.FileCleaner.Body" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_raccoon_face"
            android:alpha="0.55"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/tv_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/nothing_found"
            android:textAppearance="@style/TextAppearance.FileCleaner.Body"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

    <!-- File list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="80dp"
        android:layoutAnimation="@anim/layout_item_stagger"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Action button — not full-width for better visual proportion (§DBI3 #10) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_action"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        android:minWidth="200dp"
        android:paddingHorizontal="32dp"
        android:text="@string/delete_selected"
        android:backgroundTint="@color/colorError"
        android:textColor="@android:color/white"
        android:enabled="false"
        app:cornerRadius="@dimen/radius_btn"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.FileCleaner.Body"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>
