<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surfaceBase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Dashboard title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_title"
            android:textAppearance="@style/TextAppearance.FileCleaner.Title"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- Storage usage card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_none"
            app:cardBackgroundColor="@color/colorPrimaryContainer"
            app:strokeWidth="@dimen/stroke_none"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:id="@+id/tv_storage_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FileCleaner.Body"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnPrimaryContainer"
                    android:textAlignment="center" />

                <ProgressBar
                    android:id="@+id/progress_storage"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:progressTint="@color/colorPrimary"
                    android:progressBackgroundTint="@color/borderDefault" />

                <TextView
                    android:id="@+id/tv_storage_used"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                    android:textColor="@color/colorOnPrimaryContainer"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_storage_free"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                    android:textColor="@color/colorOnPrimaryContainer"
                    android:alpha="0.8"
                    android:textAlignment="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Scan stats card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_none"
            app:cardBackgroundColor="@color/surfaceDim"
            app:strokeWidth="@dimen/stroke_none"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_scan_stats"
                    android:textAppearance="@style/TextAppearance.FileCleaner.Body"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_stats_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Category breakdown -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_none"
            app:cardBackgroundColor="@color/surfaceDim"
            app:strokeWidth="@dimen/stroke_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_category_title"
                    android:textAppearance="@style/TextAppearance.FileCleaner.Body"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_category_breakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
