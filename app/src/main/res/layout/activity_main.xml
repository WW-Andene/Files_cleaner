<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surfaceBase">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surfaceBase"
        app:elevation="@dimen/elevation_none">

        <!-- Clean header with app branding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/spacing_xl"
            android:paddingTop="@dimen/spacing_md"
            android:paddingBottom="@dimen/spacing_xs">

            <ImageView
                android:id="@+id/iv_raccoon_header"
                android:layout_width="@dimen/icon_raccoon"
                android:layout_height="@dimen/icon_raccoon"
                android:src="@drawable/ic_raccoon_logo"
                android:scaleType="fitCenter"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.FileCleaner.Title"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                android:textColor="@color/textSecondary"
                android:fontFamily="sans-serif-medium" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="@dimen/icon_button"
                android:layout_height="@dimen/icon_button"
                android:layout_marginStart="@dimen/spacing_sm"
                android:src="@drawable/ic_settings"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/settings"
                android:scaleType="centerInside"
                android:padding="@dimen/spacing_sm"
                app:tint="@color/textSecondary" />
        </LinearLayout>

        <!-- Scan status bar â€” soft container style -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_lg"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_xs"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_none"
            app:cardBackgroundColor="@color/scanBarBackground"
            app:strokeWidth="@dimen/stroke_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/spacing_lg"
                android:paddingVertical="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_inline"
                    android:layout_height="@dimen/icon_inline"
                    android:src="@drawable/ic_scan"
                    android:importantForAccessibility="no"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_scan_status"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:text="@string/scan_prompt"
                    android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                    android:textColor="@color/scanBarText"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:accessibilityLiveRegion="polite" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="@dimen/icon_inline"
                    android:layout_height="@dimen/icon_inline"
                    android:visibility="gone"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/colorPrimary"
                    android:contentDescription="@string/scanning_in_progress" />

                <ImageButton
                    android:id="@+id/btn_cancel_scan"
                    android:layout_width="@dimen/icon_button"
                    android:layout_height="@dimen/icon_button"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:padding="@dimen/spacing_md"
                    android:src="@drawable/ic_close"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/scan_cancel"
                    android:visibility="gone"
                    app:tint="@color/textSecondary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Fragment container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph" />

    <!-- Bottom nav -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bottomNavBackground"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:elevation="@dimen/elevation_nav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
