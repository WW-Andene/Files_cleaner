<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="@dimen/radius_card"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/surfaceColor"
    app:strokeWidth="1dp"
    app:strokeColor="@color/borderDefault"
    app:rippleColor="@color/colorPrimaryContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <!-- Thumbnail / icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="@dimen/radius_icon_container"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/surfaceDim">

            <ImageView
                android:id="@+id/iv_file_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="8dp"
                android:importantForAccessibility="no" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Text block -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FileCleaner.Body"
                android:textColor="@color/textPrimary"
                android:maxLines="1"
                android:ellipsize="middle"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_file_meta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:buttonTint="@color/colorPrimary" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
