<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surfaceBase">

    <!-- Search bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:layout_marginTop="@dimen/spacing_sm"
        app:startIconDrawable="@drawable/ic_search"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:boxStrokeColor="@color/borderDefault"
        app:hintTextColor="@color/colorPrimary"
        app:startIconTint="@color/textTertiary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_files_hint"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:textAppearance="@style/TextAppearance.FileCleaner.Body"
            android:lineSpacingMultiplier="1.0" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Filters row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_sm"
        android:paddingBottom="@dimen/spacing_xs"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:background="@drawable/bg_spinner"
            android:popupBackground="@drawable/bg_spinner_dropdown"
            android:paddingHorizontal="@dimen/spacing_md"
            android:contentDescription="@string/filter_by_extension" />

        <Spinner
            android:id="@+id/spinner_sort"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/spacing_sm"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:background="@drawable/bg_spinner"
            android:popupBackground="@drawable/bg_spinner_dropdown"
            android:paddingHorizontal="@dimen/spacing_md"
            android:contentDescription="@string/a11y_sort_order" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/icon_button"
            android:layout_height="@dimen/icon_button"
            app:cardCornerRadius="@dimen/radius_btn"
            app:cardElevation="@dimen/elevation_none"
            app:cardBackgroundColor="@color/surfaceDim"
            app:strokeWidth="@dimen/stroke_none">

            <ImageButton
                android:id="@+id/btn_view_mode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_view_list"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/view_mode"
                android:scaleType="centerInside"
                android:padding="@dimen/spacing_md"
                app:tint="@color/textSecondary" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Extension chips -->
    <HorizontalScrollView
        android:id="@+id/scroll_extensions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_xs"
        android:visibility="gone">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_extensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:chipSpacingHorizontal="@dimen/spacing_chip" />
    </HorizontalScrollView>

    <!-- Stats bar -->
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3 files"
        android:textAppearance="@style/TextAppearance.FileCleaner.Caption"
        android:paddingHorizontal="@dimen/spacing_xl"
        android:paddingTop="@dimen/spacing_sm"
        android:paddingBottom="@dimen/spacing_xs"
        android:fontFamily="sans-serif-medium"
        android:accessibilityLiveRegion="polite" />

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_4xl"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/icon_empty_state"
            android:layout_height="@dimen/icon_empty_state"
            android:src="@drawable/ic_raccoon_logo"
            android:alpha="0.55"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/tv_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="@string/no_files_found"
            android:textAppearance="@style/TextAppearance.FileCleaner.Body"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/spacing_xs" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scan_now"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_sm"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="@string/scan_storage"
            android:textAllCaps="false"
            android:visibility="gone"
            app:cornerRadius="@dimen/radius_pill" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/spacing_md"
        android:paddingBottom="@dimen/spacing_above_nav"
        android:layoutAnimation="@anim/layout_item_stagger" />

</LinearLayout>
