<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surfaceBase">

    <!-- Search bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:startIconDrawable="@drawable/ic_search"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:boxStrokeColor="@color/borderDefault"
        app:hintTextColor="@color/colorPrimary"
        app:startIconTint="@color/textTertiary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_files_hint"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:textAppearance="@style/TextAppearance.FileCleaner.Body" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Filters row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_spinner"
            android:popupBackground="@color/surfaceColor"
            android:paddingHorizontal="12dp" />

        <Spinner
            android:id="@+id/spinner_sort"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_spinner"
            android:popupBackground="@color/surfaceColor"
            android:paddingHorizontal="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surfaceDim"
            app:strokeWidth="0dp">

            <ImageButton
                android:id="@+id/btn_view_mode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_view_list"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/view_mode"
                android:scaleType="centerInside"
                android:padding="8dp"
                app:tint="@color/textSecondary" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Extension chips -->
    <HorizontalScrollView
        android:id="@+id/scroll_extensions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="16dp"
        android:paddingTop="4dp"
        android:visibility="gone">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_extensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:chipSpacingHorizontal="6dp" />
    </HorizontalScrollView>

    <!-- Stats bar -->
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/n_files"
        android:textAppearance="@style/TextAppearance.FileCleaner.Caption"
        android:paddingHorizontal="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_raccoon_face"
            android:alpha="0.4"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/tv_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/no_files_found"
            android:textAppearance="@style/TextAppearance.FileCleaner.Body"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingBottom="80dp" />

</LinearLayout>
