<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surfaceBase">

    <!-- Search bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_search_tree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lg"
        android:layout_marginTop="@dimen/spacing_sm"
        app:startIconDrawable="@drawable/ic_search"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:boxStrokeColor="@color/borderDefault"
        app:hintTextColor="@color/colorPrimary"
        app:startIconTint="@color/textTertiary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_search_tree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_tree_hint"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:textAppearance="@style/TextAppearance.FileCleaner.Body"
            android:lineSpacingMultiplier="1.0" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Stats row + filter toggle + zoom info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingVertical="@dimen/spacing_sm">

        <TextView
            android:id="@+id/tv_stats_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.FileCleaner.Caption"
            android:fontFamily="sans-serif-medium"
            android:accessibilityLiveRegion="polite"
            android:visibility="gone" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/icon_button"
            android:layout_height="@dimen/icon_button"
            app:cardCornerRadius="@dimen/radius_btn"
            app:cardElevation="@dimen/elevation_none"
            app:cardBackgroundColor="@color/surfaceDim"
            app:strokeWidth="@dimen/stroke_none"
            android:layout_marginHorizontal="@dimen/spacing_xs">

            <ImageButton
                android:id="@+id/btn_toggle_filters"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_view_list"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="@dimen/spacing_md"
                android:contentDescription="@string/toggle_filters"
                app:tint="@color/textSecondary" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_zoom_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.FileCleaner.Caption"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Filter panel (collapsible) -->
    <LinearLayout
        android:id="@+id/filter_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingVertical="@dimen/spacing_xs"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinner_tree_category"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/button_height"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@drawable/bg_spinner_dropdown"
                android:paddingHorizontal="@dimen/spacing_md"
                android:contentDescription="@string/filter_by_extension" />

            <Spinner
                android:id="@+id/spinner_tree_sort"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/spacing_sm"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@drawable/bg_spinner_dropdown"
                android:paddingHorizontal="@dimen/spacing_md"
                android:contentDescription="@string/a11y_sort_order" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/scroll_tree_extensions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingTop="@dimen/spacing_xs"
            android:visibility="gone">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tree_extensions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:chipSpacingHorizontal="@dimen/spacing_chip" />
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Tree area with overlays -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="true"
        android:clipToPadding="true">

        <com.filecleaner.app.ui.arborescence.ArborescenceView
            android:id="@+id/arborescence_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/icon_empty_state"
                android:layout_height="@dimen/icon_empty_state"
                android:src="@drawable/ic_raccoon_brand"
                android:alpha="0.55"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:text="@string/scan_to_see_results"
                android:textAppearance="@style/TextAppearance.FileCleaner.Body"
                android:textColor="@color/textSecondary"
                android:gravity="center" />
        </LinearLayout>

        <!-- Selected node detail (bottom-left, next to reset FAB) -->
        <TextView
            android:id="@+id/tv_node_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/node_detail_max_width"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="@dimen/icon_file_list"
            android:layout_marginBottom="@dimen/spacing_bottom_inset"
            android:background="@drawable/bg_stats_overlay"
            android:paddingHorizontal="@dimen/spacing_lg"
            android:paddingVertical="@dimen/spacing_md"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
            android:fontFamily="sans-serif-medium"
            android:maxLines="4"
            android:ellipsize="end"
            android:elevation="@dimen/elevation_raised"
            android:accessibilityLiveRegion="polite"
            android:visibility="gone" />

        <!-- Back-to-root mini FAB (bottom-start) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_reset_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_bottom_inset"
            android:contentDescription="@string/reset_view"
            android:src="@drawable/ic_recenter"
            app:fabSize="mini"
            app:backgroundTint="@color/surfaceDim"
            app:tint="@color/colorPrimary"
            app:shapeAppearance="@style/ShapeSmall" />
    </FrameLayout>

</LinearLayout>
