<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surfaceBase">

    <!-- Search bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_search_tree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:startIconDrawable="@drawable/ic_search"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:boxStrokeColor="@color/borderDefault"
        app:hintTextColor="@color/colorPrimary"
        app:startIconTint="@color/textTertiary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_search_tree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_tree_hint"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:textAppearance="@style/TextAppearance.FileCleaner.Body" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Stats row + filter toggle + zoom info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/tv_stats_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.FileCleaner.Caption"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surfaceDim"
            app:strokeWidth="0dp"
            android:layout_marginHorizontal="4dp">

            <ImageButton
                android:id="@+id/btn_toggle_filters"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_view_list"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="@string/toggle_filters"
                app:tint="@color/textSecondary" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_zoom_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.FileCleaner.Caption"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Filter panel (collapsible) -->
    <LinearLayout
        android:id="@+id/filter_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinner_tree_category"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/surfaceColor"
                android:paddingHorizontal="12dp" />

            <Spinner
                android:id="@+id/spinner_tree_sort"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_spinner"
                android:popupBackground="@color/surfaceColor"
                android:paddingHorizontal="12dp" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/scroll_tree_extensions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingTop="4dp"
            android:visibility="gone">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tree_extensions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:chipSpacingHorizontal="6dp" />
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Tree area with overlays -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.filecleaner.app.ui.arborescence.ArborescenceView
            android:id="@+id/arborescence_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_raccoon_face"
                android:alpha="0.4"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/scan_to_see_results"
                android:textAppearance="@style/TextAppearance.FileCleaner.Body"
                android:textColor="@color/textSecondary"
                android:gravity="center" />
        </LinearLayout>

        <!-- Selected node detail (bottom-right) -->
        <TextView
            android:id="@+id/tv_node_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_stats_overlay"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
            android:fontFamily="sans-serif-medium"
            android:elevation="4dp"
            android:visibility="gone" />

        <!-- Back-to-root mini FAB (bottom-start) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_reset_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/reset_view"
            android:src="@drawable/ic_raccoon_face"
            app:fabSize="mini"
            app:backgroundTint="@color/colorPrimary"
            app:tint="@android:color/white"
            app:shapeAppearance="@style/ShapeSmall" />
    </FrameLayout>

</LinearLayout>
