<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Search bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_search_tree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        app:startIconDrawable="@drawable/ic_search"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_search_tree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_tree_hint"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Stats row + filter toggle + zoom info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/tv_stats_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textSecondary"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_toggle_filters"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_view_list"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="@string/toggle_filters" />

        <TextView
            android:id="@+id/tv_zoom_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Filter panel (collapsible) -->
    <LinearLayout
        android:id="@+id/filter_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinner_tree_category"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp" />

            <Spinner
                android:id="@+id/spinner_tree_sort"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/scroll_tree_extensions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="gone">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tree_extensions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true" />
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Tree area with overlays -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.filecleaner.app.ui.arborescence.ArborescenceView
            android:id="@+id/arborescence_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Empty state -->
        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/scan_to_see_results"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- Selected node detail (bottom-right) -->
        <TextView
            android:id="@+id/tv_node_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_stats_overlay"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:visibility="gone" />

        <!-- Back-to-root mini FAB (bottom-start) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_reset_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/reset_view"
            android:src="@drawable/ic_raccoon_face"
            app:fabSize="mini"
            app:backgroundTint="@color/colorPrimary" />
    </FrameLayout>

</LinearLayout>
