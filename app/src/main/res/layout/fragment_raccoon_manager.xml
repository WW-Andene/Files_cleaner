<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surfaceBase"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/spacing_above_nav">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Header with raccoon branding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_lg">

            <ImageView
                android:layout_width="@dimen/icon_raccoon"
                android:layout_height="@dimen/icon_raccoon"
                android:src="@drawable/ic_raccoon_face"
                android:scaleType="fitCenter"
                android:importantForAccessibility="no" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/raccoon_manager_title"
                    android:textAppearance="@style/TextAppearance.FileCleaner.Title"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/raccoon_manager_subtitle"
                    android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="@dimen/spacing_xs" />
            </LinearLayout>
        </LinearLayout>

        <!-- Scan Storage card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_raised"
            app:cardBackgroundColor="@color/colorPrimary"
            app:strokeWidth="@dimen/stroke_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_lg">

                <ImageView
                    android:layout_width="@dimen/icon_button"
                    android:layout_height="@dimen/icon_button"
                    android:src="@drawable/ic_scan"
                    android:scaleType="centerInside"
                    android:importantForAccessibility="no"
                    app:tint="@color/textOnPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raccoon_action_scan"
                        android:textAppearance="@style/TextAppearance.FileCleaner.Subtitle"
                        android:textColor="@color/textOnPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raccoon_action_scan_desc"
                        android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                        android:textColor="@color/textOnPrimary"
                        android:alpha="0.85"
                        android:layout_marginTop="@dimen/spacing_xs" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Analysis card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_none"
            app:cardBackgroundColor="@color/surfaceDim"
            app:strokeWidth="@dimen/stroke_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_lg">

                <ImageView
                    android:layout_width="@dimen/icon_button"
                    android:layout_height="@dimen/icon_button"
                    android:src="@drawable/ic_dashboard"
                    android:scaleType="centerInside"
                    android:importantForAccessibility="no"
                    app:tint="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raccoon_action_analysis"
                        android:textAppearance="@style/TextAppearance.FileCleaner.Subtitle"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/tv_analysis_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raccoon_action_analysis_desc"
                        android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="@dimen/spacing_xs" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Clean card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_quick_clean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_none"
            app:cardBackgroundColor="@color/surfaceDim"
            app:strokeWidth="@dimen/stroke_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_lg">

                <ImageView
                    android:layout_width="@dimen/icon_button"
                    android:layout_height="@dimen/icon_button"
                    android:src="@drawable/ic_nav_junk"
                    android:scaleType="centerInside"
                    android:importantForAccessibility="no"
                    app:tint="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raccoon_action_quick_clean"
                        android:textAppearance="@style/TextAppearance.FileCleaner.Subtitle"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/tv_quick_clean_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raccoon_action_quick_clean_desc"
                        android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="@dimen/spacing_xs" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tree View card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_arborescence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_none"
            app:cardBackgroundColor="@color/surfaceDim"
            app:strokeWidth="@dimen/stroke_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_lg">

                <ImageView
                    android:layout_width="@dimen/icon_button"
                    android:layout_height="@dimen/icon_button"
                    android:src="@drawable/ic_nav_browse"
                    android:scaleType="centerInside"
                    android:importantForAccessibility="no"
                    app:tint="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raccoon_action_arborescence"
                        android:textAppearance="@style/TextAppearance.FileCleaner.Subtitle"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raccoon_action_arborescence_desc"
                        android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="@dimen/spacing_xs" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Janitor card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_janitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_none"
            app:cardBackgroundColor="@color/surfaceDim"
            app:strokeWidth="@dimen/stroke_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_lg">

                <ImageView
                    android:layout_width="@dimen/icon_button"
                    android:layout_height="@dimen/icon_button"
                    android:src="@drawable/ic_settings"
                    android:scaleType="centerInside"
                    android:importantForAccessibility="no"
                    app:tint="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raccoon_action_janitor"
                        android:textAppearance="@style/TextAppearance.FileCleaner.Subtitle"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/tv_janitor_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/raccoon_action_janitor_desc"
                        android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="@dimen/spacing_xs" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
