<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/spacing_lg"
    android:paddingTop="@dimen/spacing_lg"
    android:paddingBottom="@dimen/spacing_sm"
    android:background="@color/surfaceBase">

    <ImageView
        android:layout_width="@dimen/icon_inline"
        android:layout_height="@dimen/icon_inline"
        android:src="@drawable/ic_folder"
        android:importantForAccessibility="no"
        app:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_sm"
        android:textAppearance="@style/TextAppearance.FileCleaner.BodySmall"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="middle"
        android:accessibilityHeading="true" />

    <TextView
        android:id="@+id/tv_folder_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_sm"
        android:textAppearance="@style/TextAppearance.FileCleaner.Caption"
        android:textColor="@color/textTertiary" />

</LinearLayout>
